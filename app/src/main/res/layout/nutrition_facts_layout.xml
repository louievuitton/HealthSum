    <View
        android:id="@+id/divider12"
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:layout_below="@id/dailyValuesLayout"
        android:layout_centerHorizontal="true"
        android:background="@color/black"/>


</RelativeLayout>