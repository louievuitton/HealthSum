<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/nutritionFactsTextView"
        android:text="Nutrition Facts"
        android:fontFamily="@font/archivo_black"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nutritionFactsTextView"
        android:background="@color/datepicker"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:id="@+id/servingsLayout"
        android:background="@color/bbyBlue"
        android:padding="7dp">

        <TextView
            android:id="@+id/servingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Num Servings"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/numServingsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/archivo_black"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="330dp"
        android:layout_height="20dp"
        android:layout_below="@id/servingsLayout"
        android:layout_centerHorizontal="true"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:id="@+id/caloriesLayout"
        android:padding="10dp"
        android:background="@color/lightPink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amtPerServing"
            android:text="Amount per serving"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amtPerServing"
            android:id="@+id/caloriesTextView"
            android:fontFamily="@font/archivo_black"
            android:text="Calories"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/numCaloriesValue"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/archivo_black"
            android:text="0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="40sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:layout_below="@id/caloriesLayout"
        android:layout_centerHorizontal="true"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dailyValuesLayout"
        android:layout_below="@id/divider4">

