        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/totalFatTextView"
            android:text="Total Fat"
            android:textColor="@color/black"
            android:fontFamily="@font/archivo_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/totalFatsValue"
            android:text="0g"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/totalFatTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider5"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="35dp"
            android:id="@+id/saturatedFatTextView"
            android:text="Saturated Fat"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider5"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/saturatedFatValue"
            android:text="0g"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/saturatedFatTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/divider6"
            android:id="@+id/cholesterolTextView"
            android:text="Cholesterol"
            android:textColor="@color/black"
            android:fontFamily="@font/archivo_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider6"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/cholesterolValue"
            android:text="0mg"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cholesterolTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/divider7"
            android:id="@+id/sodiumTextView"
            android:text="Sodium"
            android:textColor="@color/black"
            android:fontFamily="@font/archivo_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider7"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="110dp"
            android:id="@+id/sodiumValue"
            android:text="0mg"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/sodiumTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/divider8"
            android:id="@+id/totalCarbsTextView"
            android:text="Total Carbohydrate"
            android:textColor="@color/black"
            android:fontFamily="@font/archivo_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider8"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="240dp"
            android:id="@+id/totalCarbsValue"
            android:text="0g"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/totalCarbsTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider9"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="35dp"
            android:id="@+id/dietaryFiberTextView"
            android:text="Dietary Fiber"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider9"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/dietaryFiberValue"
            android:text="0g"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dietaryFiberTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider10"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="35dp"
            android:id="@+id/totalSugarsTextView"
            android:text="Total Sugars"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider10"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/totalSugarsValue"
            android:text="0g"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/totalSugarsTextView"
            android:layout_centerHorizontal="true"
            android:background="@color/datepicker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/divider11"
            android:id="@+id/proteinTextView"
            android:text="Protein"
            android:textColor="@color/black"
            android:fontFamily="@font/archivo_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/lightOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider11"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="110dp"
            android:id="@+id/proteinValue"
            android:text="0g"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:background="@color/lightOrange"/>
